<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Principal.PrincipalActivity"
    android:background="@color/fondoPrincipal">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/linear_1_1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="40">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"></LinearLayout>

            <ImageView
                android:id="@+id/img_calc"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:src="@drawable/img_calc"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_1_2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="60">


            <EditText
                android:background="@drawable/edittexstyle"
                android:cursorVisible="false"
                android:hint="# Primer número"
                android:paddingLeft="20dp"
                android:inputType="numberDecimal"
                android:textSize="@dimen/activity_vertical_margin"
                android:id="@+id/numero1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>

            <EditText
                android:background="@drawable/edittexstyle"
                android:cursorVisible="false"
                android:hint="# Segundo número"
                android:paddingLeft="20dp"
                android:inputType="numberDecimal"
                android:textSize="@dimen/activity_vertical_margin"
                android:id="@+id/numero2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>

            <Spinner
                android:id="@+id/spi_operaciones"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

            </Spinner>

            <Button
                android:id="@+id/btn_calcular"
                android:textColor="@android:color/white"
                android:background="@drawable/edittexstyle2"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:text="Calcular"
                android:layout_weight="10"/>

            <EditText
                android:hint="Resultado"
                android:paddingRight="15dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:background="@drawable/edittexstyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/resultado"
                android:layout_weight="10"
                android:textSize="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
